<div class="container">
	<h1>Search a Product</h1>
	<h2><%= @search_result %> Results Found</h2>
	<%= form_tag search_results_path, method: "get" do %>
		<p>
			<%= text_field_tag :search, params[:search] %>
			<%= submit_tag "Search", :name => nil %>
		</p>
	<% end %>
	<% unless @product_search.empty? %>
		<% @product_search.each do |product| %>
			<%= link_to product.title, product %>
		<% end %>
	<% end %>

	<% unless @category_search.empty? %>
		<% @category_search.each do |category| %>
			<%= category.category_name %>
		<% end %>
	<% end %>
</div>