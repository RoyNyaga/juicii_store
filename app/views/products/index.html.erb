
<%= render "layouts/header" %>
<section id="our-products">
    <div class="container my-5">
        <div class="row mb-5 justify-content-center">
            <div class="col-md-6 text-center our-products-written-content">
                <h3 class="our-products-sub-title">Popular Products</h3>
                <h2 class="our-products-title mb-3">Our Products</h2>
                <p class="our-products-intro">Lorem ipsum dolor sit amet consectetur adipisicing elit. Repudiandae nostrum natus excepturi fuga ullam accusantium vel ut eveniet aut consequatur laboriosam ipsam.</p>
            </div>
        </div>

        
        <div class="row">
        	<% @products.each do |product| %>
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
              <%= link_to image_tag(product.photo_link, class: "card-img-top", alt: "photo here") , product %>
              <div class="card-body">
                <h4 class="card-title">
                  <%= link_to product.title, product %>
                </h4>
                <h5><%= product.price %> CFA</h5>
                <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Amet numquam aspernatur!</p>
              </div>
              <div class="card-footer">
                <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
              </div>
            </div>
          </div>
        <% end %>
        </div>

        
    </div>       
</section>